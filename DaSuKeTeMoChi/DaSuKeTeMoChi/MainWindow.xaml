<Window x:Class="DaSuKeTeMoChi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DaSuKeTeMoChi"
        
        mc:Ignorable="d"
        
       
        Title="助けてく Mochi!" Height="251.333" Width="633.333" ResizeMode="NoResize"
        AllowsTransparency="True"   WindowStyle="None"  VirtualizingPanel.VirtualizationMode="Recycling" Topmost="True">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0.5"></SolidColorBrush>
        
        
    </Window.Background>
    
    <Grid>
        
        
        
        <TextBox x:Name="InsertTextBox" HorizontalAlignment="Left" Height="23" Margin="100,15,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="297"/>
        <TextBox x:Name="ResultTextBox" HorizontalAlignment="Left" Height="23" Margin="100,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="297"/>
        <Label x:Name="InsertLabel" Content="Insert Text" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,12,0,0"/>
        <Label x:Name="ResultLabel" Content="Result Text" HorizontalAlignment="Left" Margin="14,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.081,-0.75"/>
        <Button Content="Click" HorizontalAlignment="Left" Margin="430,15,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <RadioButton x:Name="KorCon" Content="Kor->Jp" HorizontalAlignment="Left" IsChecked="True" Margin="564,15,0,0" VerticalAlignment="Top" Checked="KorCon_Checked"/>
        <RadioButton x:Name="JpCon" Content="Jp->Kor" HorizontalAlignment="Left" IsChecked="False" Margin="564,44,0,0" VerticalAlignment="Top" Checked="JpCon_Checked"/>

    </Grid>
     
</Window>
